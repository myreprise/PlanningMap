<div class="my-fluid-container">
	<div class="row">
	  <div class="col-md-8">
	    <h2><%= @city.name %>
	    <p>
	    	<%= link_to 'Edit', edit_city_path(@city) %> |
			<%= link_to 'Back', cities_path %>
		</p>
	</h2>
	  </div>
	      <div class="col-md-4">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="search projects" id="search">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div> <!-- end col md -->
	</div> <!-- End of row -->
	<div class="row">
		<div class="col-md-5">
			<%= image_tag(@city.image.url(:large), :class => "img-thumbnail") %>
		</div>
		<div class="col-md-7">
			<h3>Retail projects</h3>
			<table class="table table-hover" id="project_list">
				<thead>
					<tr>
						<th>Project</th>
						<th>Developer</th>
						<th>District</th>
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
					<tr class="entry">
						<td><%= link_to project.name, project, class: "searchable" %></td>
						<td><%= link_to project.developer.name, project.developer %></td>
						<td><%= link_to project.district.name, city_district_path(@city, project.district) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div> <!-- end row div -->
	<div class="row">
		<div class="col-md-12">
			<%= render 'map' %>
		</div>
	</div> <!-- End of row -->
	<div class="row">
		<div class="col-md-12">
				<h3>Retail districts</h3>
							<p><%= link_to pluralize(@city.districts.size, 'districts'), city_districts_path(@city) %></p>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>District</th>
								<th>Population</th>
								<th>Grade</th>
							</tr>
						</thead>
						<tbody>
							<% @districts.each do |district| %>
							<tr>
								<td><%= link_to district.name, [district.city, district] %></td>
								<td><%= district.population %></td>
								<td><%= district.grade %></td>
							</tr>
							<% end %>
						</tbody>
					</table>

				<h3>Most recent real estate data</h3>
				<%= link_to 'Add entry', new_city_estate_path(@city) %> | <%= link_to	'Show', city_estates_path(@city) %>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Period</th>
								<th>New Constructed Residential</th>
								<th>Secondary Residential</th>
								<th>Real Estate Investment (Commercial)</th>
								<th>Real Estate Investment (Residential)</th>
							</tr>
						</thead>
						<tbody>
							<% @estates.each do |estate| %>
							<tr>
								<td><%= estate.timeperiod.strftime("%B") %></td>
								<td><%= estate.new_constructed_residential %></td>
								<td><%= estate.secondary_residential %></td>
								<td><%= estate.re_investment_residential %></td>
								<td><%= estate.re_investment_commercial %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
		</div>
	</div> <!-- End of row -->

	<div class="row">
		<div class="col-md-12">

		</div>
	</div> <!-- End of row -->

</div> <!-- End of container -->

<script>

	window.onload = ready;

</script>