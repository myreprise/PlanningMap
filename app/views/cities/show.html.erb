<div class="container">
	<div class="row">
	  <div class="col-xs-12">
	    <h2><%= @city.name %></h2>
	    <%= link_to 'Edit', edit_city_path(@city) %> |
		<%= link_to 'Back', cities_path %>
		<p id="notice"><%= notice %></p>
	  </div>
	</div>
	<div class="row">
		<div class="col-md-7">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Project</th>
						<th>Developer</th>
						<th>District</th>
						<th>GFA</th>
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
					<tr>
						<td><%= project.name %></td>
						<td><%= project.developer.name %></td>
						<td><%= project.district %></td>
						<td><%= project.gfa %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-5">
			<div id="allmap"></div>
		</div>
	</div>
</div>


    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=BF934346e7e1c13620f7d9de908ed808"></script>

    <script type="text/javascript">
    	createMap(<%= @city.longitude %>, <%= @city.lattitude %>);
    </script>