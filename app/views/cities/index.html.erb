<div class="container">
  <div class="row">
    <div class="col-md-6">

      <p id="notice"><%= notice %></p>

      <h1>Listing Cities</h1>
      <%= link_to 'New City', new_city_path %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>City</th>
            <th>admin</th>
          </tr>
        </thead>

        <tbody>
          <% @cities.each do |city| %>
            <tr>
              <td><%= link_to city.name, city %></td>
              <td><%= link_to 'Edit', edit_city_path(city) %> | <%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div> <!-- end col-md -->
    <div class="col-md-6"></div>
  </div>
</div> <!-- end container -->