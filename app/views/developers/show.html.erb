<div class="my-fluid-container">
 <h2><%= image_tag(@developer.image.url(:large)) %></h2>
	<div class="row">
		<div class="col-md-8">
			<h3>Projects by developer <%= @developer.name %></h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Project</th>
						<th>City</th>
						<th>GFA</th>
						<th>Tenants</th>
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
					<tr>
						<td><%= link_to project.name, project %></td>
						<td><%= link_to project.city.name, project.city %></td>
						<td><%= number_with_delimiter(project.gfa, :delimiter => ',') %></td>
						<td><%= project.tenants %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= render 'map' %>
		</div>
	</div> <!-- End of row-->
	<div class="row">
		<div class="col-md-12">
			<h1>Company financials</h1>
			<table>
				<tbody>
					<tr>
						<td>
							Revenue
						</td>
						<td>
							<%= %>
						</td>
					</tr>
					<tr>
						<td>
							Total equity
						</td>
						<td>
							<%= %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10">
			<h3><%= @developer.name %> news headlines</h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Title</th>
						<th>Publication</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					<% @articles.each do |article| %>
					<tr>
						<td><%= link_to article.title, article %></td>
						<td><%= article.publication %></td>
						<td><%= article.publication_date %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<script>

	window.onload = ready;

</script>