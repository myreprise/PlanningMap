<div class="container">
  <div class="row">
    <div class="col-md-12">

<%= link_to 'New Developer', new_developer_path %>

<table class="table table-hover">
  <thead>
    <tr>
            <th>Developer</th>
            <th>Country</th>
            <th>Projects</th>
            <th>Total GFA</th>
            <th>admin</th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td style="vertical-align:middle;"><%= image_tag(developer.image.url(:small)) %>   <%= link_to developer.name, developer %></td>
        <td style="vertical-align:middle;"><%= developer.country %></td>
        <td style="vertical-align:middle;"><%= Project.where(:developer_id => developer.id).size %></td>
        <td style="vertical-align:middle;"><%= number_with_delimiter(Project.where( :developer_id => developer.id ).sum :gfa)  %></td>
        <td style="vertical-align:middle;"><%= link_to 'Edit', edit_developer_path(developer) %> | <%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div> <!-- end col-md -->
  </div> <!-- end of row -->
</div> <!-- end container -->